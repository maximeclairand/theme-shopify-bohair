{% schema %}
{
 "name": "Video/Photo carrousel",
  "tag": "section",
  "class": "video-photo-section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Titre principal",
      "default": "Elles l’ont adoptées !"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Taille du titre (px)",
      "min": 20,
      "max": 60,
      "step": 1,
      "default": 36
    },
    {
      "type": "text",
      "id": "stars_text",
      "label": "Texte étoiles",
      "default": "★★★★★"
    },
    {
      "type": "color",
      "id": "stars_color",
      "label": "Couleur des étoiles",
      "default": "#ffbf00"
    },
    {
      "type": "text",
      "id": "note_text",
      "label": "Texte note",
      "default": "Excellent 4.8/5 sur 74 avis"
    }
  ],
  "blocks": [
    {
      "type": "review_card",
      "name": "Carte d'avis",
      "settings": [
        {
          "type": "select",
          "id": "media_type",
          "label": "Type de média",
          "options": [
            { "value": "image", "label": "Image" },
            { "value": "video", "label": "Vidéo" }
          ],
          "default": "image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "video_poster",
          "label": "Aperçu vidéo (image)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titre de l’avis",
          "default": "Agréable sur la peau !"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Contenu de l’avis",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        },
        {
          "type": "text",
          "id": "tag_text",
          "label": "Texte pastille",
          "default": "Cure découverte"
        },
        {
          "type": "color",
          "id": "tag_color",
          "label": "Couleur pastille",
          "default": "#f2c400"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Nom de l'auteur",
          "default": "Émilie.O"
        },
        {
          "type": "text",
          "id": "verified_text",
          "label": "Texte 'avis vérifié'",
          "default": "Avis vérifié"
        },
        {
          "type": "image_picker",
          "id": "verified_icon",
          "label": "Icône 'avis vérifié'",
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Section Avis Carrousel",
      "category": "Avis"
    }
  ]
}
{% endschema %}