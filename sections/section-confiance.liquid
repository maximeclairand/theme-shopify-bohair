{% schema %}
{
  "name": "Section Confiance",
  "tag": "section",
  "class": "section-confiance",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Couleur de fond",
      "default": "#f9f9f9"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Couleur du titre principal",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "item_title_color",
      "label": "Couleur des titres des blocs",
      "default": "#111111"
    },
    {
      "type": "color",
      "id": "item_text_color",
      "label": "Couleur des textes",
      "default": "#444444"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Taille du titre principal (px)",
      "default": 32,
      "min": 20,
      "max": 60,
      "step": 1
    },
    {
      "type": "range",
      "id": "titlebloc_font_size",
      "label": "Taille du titre des blocs (px)",
      "default": 32,
      "min": 12,
      "max": 60,
      "step": 1
    },
    {
      "type": "range",
      "id": "text_font_size",
      "label": "Taille du texte des blocs (px)",
      "default": 14,
      "min": 12,
      "max": 24,
      "step": 1
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Bloc",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icône"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titre",
          "default": "Titre du bloc"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Texte",
          "default": "Texte descriptif du bloc."
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Section Confiance",
      "blocks": [
        {
          "type": "item",
          "settings": {
            "icon": "",
            "title": "Confiance retrouvée",
            "text": "Vous n’avez pas seulement densifié vos cheveux. Vous avez retrouvé votre assurance."
          }
        },
        {
          "type": "item",
          "settings": {
            "icon": "",
            "title": "Densité et volume immédiats",
            "text": "Camoufle les zones clairsemées en quelques secondes, pour un effet naturel et homogène."
          }
        },
        {
          "type": "item",
          "settings": {
            "icon": "",
            "title": "Formule respectueuse",
            "text": "Testée dermatologiquement, adaptée aux cuirs chevelus sensibles."
          }
        },
        {
          "type": "item",
          "settings": {
            "icon": "",
            "title": "Tenue longue durée",
            "text": "Résiste à la transpiration, au vent et aux mouvements du quotidien."
          }
        }
      ]
    }
  ]
}
{% endschema %}

<div class="confiance-section" style="background-color: {{ section.settings.bg_color }};">
  <h2 class="confiance-title" style="color: {{ section.settings.title_color }}; font-size: {{ section.settings.title_font_size }}px;">
    Retrouvez 100% de votre confiance
  </h2>
  <div class="confiance-grid">
    {% for block in section.blocks %}
      <div class="confiance-item">
        {% if block.settings.icon != blank %}
          <div class="confiance-icon">
            <img src="{{ block.settings.icon | image_url: width: 100 }}" alt="{{ block.settings.title }}">
          </div>
        {% endif %}
        <h3 style="color: {{ section.settings.item_title_color }};  font-size: {{ section.settings.titlebloc_font_size }}">{{ block.settings.title }}</h3>
        <p style="color: {{ section.settings.item_text_color }}; font-size: {{ section.settings.text_font_size }}px;">
          {{ block.settings.text }}
        </p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .confiance-section {
    padding: 60px 20px;
    text-align: center;
  }

  .confiance-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    max-width: 1500px;
    margin: 0 auto;
  }

  .confiance-item {
    background: #fff;
    padding: 25px 25px;
    border-radius: 5px;
    width: 300px;
    transition: transform 0.3s ease;
  }

  .confiance-item:hover {
    transform: translateY(-5px);
  }

  .confiance-icon img {
    width: 50px;
    height: 50px;
    margin-bottom: 0px;
  }

  .confiance-item h3 {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 10px;
  }

  .confiance-item p {
    line-height: 1.5;
  }

  @media screen and (max-width: 768px) {
    .confiance-grid {
      flex-direction: column;
      align-items: center;
    }

    .confiance-item {
      width: 100%;
      max-width: 360px;
    }
  }
</style>
