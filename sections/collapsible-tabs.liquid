                    {%- endif -%}
                    {%- if section.settings.additional_button2_subtitle != blank -%}
                      <span class="button-subtitle">{{ section.settings.additional_button2_subtitle }}</span>
                    {%- endif -%}
                  </span>
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

