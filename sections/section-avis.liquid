  }

  @media screen and (max-width: 768px) {
    .adoption-section {
      flex-direction: column;
      gap: 30px;
      padding: 40px 0;
      overflow: hidden;
    }
    .adoption-slide {
      width: 100vw;
      box-sizing: border-box;
      padding: 0 16px;
    }
    .adoption-caption .tag {
      margin-top: 60px;
    }

    .adoption-left
    {
