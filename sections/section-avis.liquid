          "default": "image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "video_poster",
          "label": "Aperçu vidéo (image)"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "URL de la vidéo"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titre de l’avis",
          "default": "Agréable sur la peau !"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Contenu de l’avis",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        },
        {
          "type": "text",
          "id": "tag_text",
          "label": "Texte pastille",
          "default": "Cure découverte"
        },
        {
      "type": "color",
      "id": "pastille_color",
      "label": "Couleur du texte de la pastille",
      "default": "#000000"
    },
        {
          "type": "color",
          "id": "tag_color",
          "label": "Couleur pastille",
          "default": "#f2c400"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Nom de l'auteur",
          "default": "Émilie.O"
        },
        {
          "type": "text",
          "id": "verified_text",
          "label": "Texte 'avis vérifié'",
          "default": "Avis vérifié"
        },
        {
          "type": "image_picker",
          "id": "verified_icon",
          "label": "Icône 'avis vérifié'"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Section Avis Carrousel",
      "category": "Avis"
    }
  ]
}
{% endschema %}



<style>
  .adoption-section {
    background: #fff;
    padding: 60px 20px;
    display: flex;
    gap: 40px;
    max-width: 1400px;
    margin: 0 auto;
    align-items: flex-start;
    flex-wrap: wrap;
  }

  .adoption-left {
    flex: 0 0 240px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .adoption-left .stars {
    font-size: 20px;
  }
  .adoption-left .note {
    font-size: 16px;
    margin-top: 8px;
    color: #2d1e1e;
  }
  .adoption-left h2 {
    margin-top: 20px;
    color: #2d1e1e;
    line-height: 1.3;
  }
  .adoption-arrows {
    margin-top: 40px;
    display: flex;
    gap: 16px;
  }
  .adoption-arrow {
    background: transparent;
    border: none;
    width: 42px;
    height: 42px;
    font-size: 0;
    cursor: pointer;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }
  .adoption-arrow:first-child {
    background-image: url('{{ section.settings.arrow_left | image_url }}');
  }
  .adoption-arrow:last-child {
    background-image: url('{{ section.settings.arrow_right | image_url }}');
  }

  .adoption-right {
    overflow: hidden;
    flex: 1;
    position: relative;
  }
  .adoption-track {
    display: flex;
    transition: transform 0.5s ease;
    gap: 30px;
    width: fit-content;
  }
  .adoption-slide {
    flex-shrink: 0;
    width: 300px;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }
  .adoption-image,
  .adoption-video {
    position: relative;
    width: 100%;
    height: auto;
    max-height: 300px;
  }
  .adoption-image img,
  .adoption-video img {
    width: 100%;
    display: block;
  }
  .adoption-video .play-button {
    position: absolute;
    top: 270px;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.5);
    width: 50px;
    height: 50px;
    border-radius: 50%;
    color: white;
    font-size: 24px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }
  .adoption-caption {
    padding: 20px;
  }

  .video-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.75);
