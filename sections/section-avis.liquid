{% schema %}
{
  "name": "Section Avis Carrousel",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Titre principal",
      "default": "Elles l’ont adoptées !"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Taille du titre (px)",
      "min": 20,
      "max": 60,
      "step": 1,
      "default": 36
    },
    {
      "type": "text",
      "id": "stars_text",
      "label": "Texte étoiles",
      "default": "★★★★★"
    },
    {
      "type": "color",
      "id": "stars_color",
      "label": "Couleur des étoiles",
      "default": "#ffbf00"
    },
    {
      "type": "text",
      "id": "note_text",
      "label": "Texte note",
      "default": "Excellent 4.8/5 sur 74 avis"
    },

    {
  "type": "image_picker",
  "id": "arrow_left",
  "label": "Icône flèche gauche"
},
{
  "type": "image_picker",
  "id": "arrow_right",
  "label": "Icône flèche droite"
}
  ],
  "blocks": [
    {
      "type": "review_card",
      "name": "Carte d'avis",
      "settings": [
        {
          "type": "select",
          "id": "media_type",
          "label": "Type de média",
          "options": [
            { "value": "image", "label": "Image" },
            { "value": "video", "label": "Vidéo" }
